<!DOCTYPE html>
<html>
<head>
  <title>AdpepsFrontend</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="header">
		<div class="logo">
			<a href="/"><%= image_tag "logo.png" %></a>
		</div>
		<div class="menu">
			<div class="menu-item">
				<%= link_to "МОБИЛЬНАЯ РЕКЛАМА", {:action => "advertising" ,:controller => "main"}%>
			</div>
			<div class="divider">&nbsp;</div>
			<div class="menu-item">
				<%= link_to "ПЛОЩАДКАМ", {:action => "blank",:controller => "main" }%>
			</div>
			<div class="divider">&nbsp;</div>
			<div class="menu-item">
				<%= link_to "ВОПРОСЫ", {:action => "questions",:controller => "main"}%>
			</div>
			<div class="divider">&nbsp;</div>
			<div class="menu-item">
				<%= link_to "КОНТАКТЫ", {:action => "contacts",:controller => "main"}%>
			</div>
		</div>
		<div class="menu-right">
			<div class="login">
				<a href="http://account.adpeps.com/login">ВОЙТИ</a> или <a href="http://account.adpeps.com/login">ЗАРЕГИСТРИРОВАТЬСЯ</a>
			</div>
			<div class="lang">
				RUS
				<a href="#">ENG</a>
			</div>
		</div>
	</div>


	<div class="content">
		<%= yield %>
	</div>



</body>
</html>
